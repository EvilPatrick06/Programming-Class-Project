{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Auto Update Codespace on Startup",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "sleep 60 && bash .vscode/auto_sync_wrapper.sh"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "detail": "Waits 60s for VS Code to initialize, then waits for container setup and extensions before running auto-sync (runs quietly in background)"
        },
        {
            "label": "Manual Codespace Update",
            "type": "shell",
            "command": "python3",
            "args": [
                ".vscode/auto_sync.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Manually update Ubuntu system, sync VS Code extensions, and sync codespace from GitHub with VS Code dialogs"
        },
        {
            "label": "Sync VS Code Extensions",
            "type": "shell",
            "command": "python3",
            "args": [
                ".vscode/extension_manager.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Synchronize VS Code extensions across codespaces"
        },
        {
            "label": "Push Changes to GitHub", 
            "type": "shell",
            "command": "python3",
            "args": [
                ".vscode/git_sync.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Push your local changes to GitHub with comprehensive sync options"
        },
        {
            "label": "Check VS Code Readiness",
            "type": "shell",
            "command": "bash",
            "args": [
                ".vscode/check_vscode_ready.sh"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Check if VS Code and extensions are ready for auto-sync operations"
        },
        {
            "label": "Manual Auto Sync (Visible)",
            "type": "shell",
            "command": "bash",
            "args": [
                ".vscode/auto_sync_wrapper.sh"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Run the auto-sync wrapper manually with full visibility (doesn't wait for startup delay)"
        },
        {
            "label": "Run Turtle Game",
            "type": "shell",
            "command": "xvfb-run",
            "args": [
                "-a",
                "python",
                "CtrlUnoArcade.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Launch the turtle-based Wordy game using Xvfb for headless display"
        }
    ]
}