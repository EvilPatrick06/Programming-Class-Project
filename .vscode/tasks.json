{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Auto Update Codespace on Startup",
            "type": "shell",
            "command": "bash",
            "args": [
                ".vscode/auto_sync_wrapper.sh"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "detail": "Waits for container setup to complete, then runs Ubuntu updates, extension sync, and repository operations"
        },
