{
  "name": "Programming Class Project",
  "image": "python:3.12-slim",
  "postCreateCommand": "bash -c 'apt-get update && apt-get install -y git curl && apt-get clean && rm -rf /var/lib/apt/lists/* && bash .devcontainer/clone-main.sh'",
  "postStartCommand": "bash -c 'export CODESPACES_CONTAINER_SETUP=true && bash .devcontainer/complete-setup.sh && (sleep 30 && bash .devcontainer/auto-install-extensions.sh &)'",
  "containerEnv": {
    "SHELL": "/bin/bash"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3",
        "terminal.integrated.defaultProfile.linux": "bash",
        "workbench.startupEditor": "none"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}
