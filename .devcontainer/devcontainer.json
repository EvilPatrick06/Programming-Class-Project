{
  "name": "Programming Class Project",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "bash -c 'set -e; bash .devcontainer/clone-main.sh'",
  "postStartCommand": "bash -c 'export CODESPACES_CONTAINER_SETUP=true && bash .devcontainer/complete-setup.sh'",
  "containerEnv": {
    "SHELL": "/bin/bash"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3",
        "terminal.integrated.defaultProfile.linux": "bash",
        "workbench.startupEditor": "none"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}